<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GamePlayActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F3F6F3"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/home"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/pacifico"
                    android:text="Tic-Tac-Toe"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:textSize="30dp" />


                <ImageButton
                    android:id="@+id/idBtnReset"
                    android:text="Reset"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_baseline_refresh_24"
                    android:textAllCaps="false"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>





    </LinearLayout>



    <LinearLayout
        android:layout_gravity="top"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idTVPlayer1"
            android:text="Player1"
            android:textSize="26sp"
            android:textStyle="normal"
            android:textColor="@color/green"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:freezesText="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_margin="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/user1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/green"/>

                <View
                    android:background="@color/black"
                    android:layout_width="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/user2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="35dp"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/idTVPlayer2"
            android:text="Player2"
            android:textSize="26sp"
            android:textStyle="normal"
            android:freezesText="true"
            android:layout_marginStart="20dp"
            android:gravity="start"
            android:textColor="@color/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <Button
                    android:id="@+id/idBtnBox1"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:elevation="15dp"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox2"
                    android:textSize="65sp"
                    android:elevation="15dp"
                    android:onClick="buttonClick"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox3"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:elevation="15dp"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <Button
                    android:id="@+id/idBtnBox4"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:elevation="15dp"
                    android:onClick="buttonClick"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox5"
                    android:textSize="65sp"
                    android:onClick="buttonClick"
                    android:elevation="15dp"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox6"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:elevation="15dp"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>
            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_height="2dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <Button
                    android:id="@+id/idBtnBox7"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:elevation="15dp"
                    app:backgroundTint="@color/white"
                    android:onClick="buttonClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox8"
                    android:textSize="65sp"
                    android:elevation="15dp"
                    android:onClick="buttonClick"
                    android:layout_weight="1"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/black"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/idBtnBox9"
                    android:textSize="65sp"
                    android:layout_weight="1"
                    android:elevation="15dp"
                    android:onClick="buttonClick"
                    app:backgroundTint="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>